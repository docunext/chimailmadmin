<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="alias_get_all">
	<connection>&connection_read;</connection>
	<params>
		<param name="_get/domain_id" type="text" default="%"/>
		<param name="_get/alias_id" type="text" default="%"/>
	</params>
	<sql>
	SELECT DISTINCT &xpa_alias;.alias,&xpa_domains;.domain, &xpa_alias;.alias as fq_alias_address
	FROM &xpa_alias;,&xpa_domains;
	WHERE &xpa_alias;.domain_id LIKE ? and &xpa_alias;.alias_id LIKE ?
	AND &xpa_domains;.domain_id = &xpa_alias;.domain_id
	</sql>
</query>
