.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", domains_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_domain_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_domain_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Domain
    .inner
      = form_for @domain, :url => domain_path(@domain), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
