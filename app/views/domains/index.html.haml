.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", domains_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_domain_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Domains
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.domain.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @domains.each do |domain|
          %tr{:class => cycle("odd", "even")}
            %td
              = domain.id
            %td
              = link_to domain.name, domain_path(domain)
            %td
              = domain.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", domain_path(domain)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_domain_path(domain)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", domain_path(domain), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
