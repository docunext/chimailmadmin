.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", domains_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_domain_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", domain_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.domain.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @domain.name
      %p
        %b
          = t("activerecord.attributes.domain.account_id", :default => t("activerecord.labels.account_id", :default => "Account"))
          \:
        = @domain.account_id
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_domain_path(@domain), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), domain_path(@domain), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
