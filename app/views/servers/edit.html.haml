.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", servers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_server_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_server_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Server
    .inner
      = form_for @server, :url => server_path(@server), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
