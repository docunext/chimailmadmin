.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", emails_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_email_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", email_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.email.address", :default => t("activerecord.labels.address", :default => "Address"))
          \:
        = @email.address
      %p
        %b
          = t("activerecord.attributes.email.domain_id", :default => t("activerecord.labels.domain_id", :default => "Domain"))
          \:
        = @email.domain_id
      %p
        %b
          = t("activerecord.attributes.email.first_name", :default => t("activerecord.labels.first_name", :default => "First name"))
          \:
        = @email.first_name
      %p
        %b
          = t("activerecord.attributes.email.last_name", :default => t("activerecord.labels.last_name", :default => "Last name"))
          \:
        = @email.last_name
      %p
        %b
          = t("activerecord.attributes.email.quota", :default => t("activerecord.labels.quota", :default => "Quota"))
          \:
        = @email.quota
      %p
        %b
          = t("activerecord.attributes.email.maildir", :default => t("activerecord.labels.maildir", :default => "Maildir"))
          \:
        = @email.maildir
      %p
        %b
          = t("activerecord.attributes.email.active", :default => t("activerecord.labels.active", :default => "Active"))
          \:
        = @email.active
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_email_path(@email), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), email_path(@email), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
