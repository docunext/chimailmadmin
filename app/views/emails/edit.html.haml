.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", emails_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_email_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_email_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Email
    .inner
      = form_for @email, :url => email_path(@email), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
