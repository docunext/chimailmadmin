.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", emails_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_email_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Emails
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.email.address", :default => t("activerecord.labels.address", :default => "Address"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @emails.each do |email|
          %tr{:class => cycle("odd", "even")}
            %td
              = email.id
            %td
              = link_to email.address, email_path(email)
            %td
              = email.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", email_path(email)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_email_path(email)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", email_path(email), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
